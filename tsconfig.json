{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./source",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./typings", "./node_modules/@types", "./source/@types"]
  },
  "include": [
    "source/**/*.ts",
    "source/server.ts",
    "app.ts",
    "config/config.js"
  ],
  "exclude": ["node_modules", "typings", "source/@types"]
}
